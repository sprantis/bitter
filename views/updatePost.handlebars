<div class="container-fluid">
    <h2 class="mb-5">Update Post</h2>
    <form id="update-post-form">
        <div class="mb-3">
            <label class="form-label" for="post-title"><h5>Post Title</h5></label>
            <input class="form-control" type="text" name="post-title" value="{{post.postTitle}}"/>
        </div>
        <div>
            <label class="form-label" for="post-content"><h5>Post Content</h5></label>
            <textarea class="form-control" name="post-content" rows="3">{{post.postContent}}</textarea>
        </div>
        <div class="row">
            <div class="col mt-4">
                <button class="btn btn-primary" type="submit">Update Post</button>
            </div>
            <div class="col mt-4 d-flex justify-content-end">
                <button type="click" class="btn btn-danger" id="delete-post-btn">Delete Post</button>
            </div>
        </div>
    </form>


    <script src="/js/updatePost.js"></script>
    <script src="/js/deletePost.js"></script>
</div>

