<div class="container-fluid c-column">
    {{!-- Sign in card --}}
    <div class="card mx-auto" style="min-width: 300px;">
        <div class="card-header">
            <h2>Sign In</h2>
        </div>
        <div class="card-body">
            <form class="signin-form">
                <div class="mb-3">
                    <label for="username-signin">Username:</label>
                    <input class="form-control" type="text" id="username-signin" />
                </div>
                <div class="mb-3">
                    <label for="password-signin">Password: </label>
                    <input class="form-control" type="password" id="password-signin" />
                </div>
                <div class="mb-3">
                    <button class="btn btn-dark" type="submit">Submit</button>
                </div>
            </form>
        </div>
    </div>

    {{!-- Sign up card --}}
    <div class="card mt-5 mx-auto" style="min-width: 300px;">
        <div class="card-header">
            <h2>Sign Up</h2>
        </div>
        <div class="card-body">
            <form class="signup-form">
                <div class="mb-3">
                    <label for="username-signup">Username:</label>
                    <input class="form-control" type="text" id="username-signup" />
                </div>
                <div class="mb-3">
                    <label for="password-signup">Password:</label>
                    <input class="form-control" type="password" id="password-signup" />
                </div>
                <div class="mb-3">
                    <button class="btn btn-dark" type="submit">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="./js/signinAndSignup.js"></script>
