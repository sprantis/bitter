<!-- Loop over each object in the posts array -->
<div>
    {{#each posts as |post|}}
    <div class="card my-4 w-50 mx-auto">
        <div class="card-body">
            <h3>
                <a href="/post/{{post.id}}" class="text-danger">{{post.postTitle}}</a>
            </h3>
            <h6>Posted by {{post.user.username}} on {{formatDate dateCreated}} </h6>
        </div>
    </div>
    {{/each}}
</div>

